<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EE0D0442"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context=".Backpack.AddBackpackActivity">

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="329dp"
        android:layout_height="46dp"
        android:layout_marginTop="24dp"
        android:background="@android:color/holo_orange_dark"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAddItem"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="142dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="My Item list"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/error_tv_addbp" />

    <Button
        android:id="@+id/btnAddItem"
        android:layout_width="294dp"
        android:layout_height="51dp"
        android:layout_marginTop="24dp"
        android:text="Add New Item to my list"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/items_added" />

    <ListView
        android:id="@+id/listItems"
        android:layout_width="289dp"
        android:layout_height="217dp"
        android:layout_marginTop="16dp"
        android:divider="@color/colorPrimary"
        android:dividerHeight="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/items_added"
        android:layout_width="212dp"
        android:layout_height="46dp"
        android:layout_marginTop="40dp"
        android:text="Items Added :"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#969393"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.206"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listItems" />

    <TextView
        android:id="@+id/error_tv_addbp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#AC0202"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.257"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bp_name" />

    <TextView
        android:id="@+id/items_added_tv"
        android:layout_width="64dp"
        android:layout_height="44dp"
        android:layout_marginTop="40dp"
        android:text="0"
        android:textColor="#056D01"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toEndOf="@+id/items_added"
        app:layout_constraintTop_toBottomOf="@+id/listItems" />

    <EditText
        android:id="@+id/bp_name"
        android:layout_width="230dp"
        android:layout_height="54dp"
        android:layout_marginTop="56dp"
        android:background="#F0EDED"
        android:ems="10"
        android:hint="Backpack Name"
        android:inputType="textPersonName"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#414141"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>